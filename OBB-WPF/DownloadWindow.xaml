<Window x:Class="OBB_WPF.DownloadWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OBB_WPF"
        mc:Ignorable="d"
        Title="DownloadWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Text="{Binding Path=CurrentBook}" HorizontalAlignment="Stretch" x:Name="CurrentBook"></TextBlock>
        <ProgressBar Minimum="0" Maximum="0" Value="0" HorizontalAlignment="Stretch" x:Name="Progress" Grid.Row="1"></ProgressBar>
    </Grid>
</Window>
