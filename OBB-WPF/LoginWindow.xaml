<Window x:Class="OBB_WPF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OBB_WPF"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <ListView>
        <StackPanel Orientation="Horizontal">
            <TextBlock>Username</TextBlock>
            <TextBox x:Name="Username" Width="200"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Password:   " HorizontalAlignment="Stretch"></TextBlock>
            <TextBox x:Name="Password" Width="200"></TextBox>
        </StackPanel>
        <Button x:Name="Save" Click="Save_Click">Save</Button>
    </ListView>
</Window>
