<Window x:Class="OBB_WPF.CreateLink"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OBB_WPF"
        mc:Ignorable="d"
        Title="CreateLink" Height="450" Width="800">
    <ListView>
        <TextBox x:Name="Link" Width="40" HorizontalAlignment="Stretch"></TextBox>
        <TextBox x:Name="Target" Width="40" HorizontalAlignment="Stretch"></TextBox>
        <Button Content="Save" Click="Button_Click"></Button>
    </ListView>
</Window>
